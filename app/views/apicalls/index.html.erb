<div class='d-flex align-items-center justify-content-center pt-5 mb-5'>
  <%= image_tag 'Spotify_Logo_RGB_Green.png', class:'w-25 mt-1 ml-3' %>
  <h1 class='mt-3 ml-3 mr-3'>||| New Releases:</h1>
  <%= form_with url: root_path, method: :get, class:'mt-3' do |f| %>
     <%= f.select(:country, options_for_select(country_names), prompt: 'Select a Country')%>
     <%= f.submit "Search", class:'btn-dark rounded-pill ml-2' %>
  <% end %>
</div>

